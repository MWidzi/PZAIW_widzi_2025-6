<%- include("header.ejs") %>

    <form method="POST" action="/songs/saveRating">
        <input type="submit" value="Update rating">
        <table>
            <% counter=0 %>
                <thead>
                    <tr>
                        <th>game</th>
                        <th>name</th>
                        <th>level</th>
                        <th>difficulty</th>
                        <th>FC</th>
                        <th>AP</th>
                    </tr>
                </thead>
                <% data.forEach(function(song) { %>
                    <tr>
                        <td>
                            <%= song.game %>
                        </td>
                        <td>
                            <%= song.name %>
                        </td>
                        <td>
                            <%= song.lvl %>
                        </td>
                        <td>
                            <%= song.difficulty %>
                        </td>
                        <td>
                            <input type="checkbox" name="songFcIds" value="<%= counter %>" <% if(fcTab &&
                                fcTab.includes(String(counter))) { %>checked<% } %>>
                        </td>
                        <td>
                            <input type="checkbox" name="songApIds" value="<%= counter %>" <% if(apTab &&
                                apTab.includes(String(counter))) { %>checked<% } %>>
                        </td>
                    </tr>
                    <% counter++ %>
                        <% })%>
        </table>
    </form>

    <%- include("footer.ejs") %>
